@model BTRS.Models.Bus
@Html.Partial("_adminBusTop")


@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Are you sure you want to delete this bus?</h1>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BusId)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BusId)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CptName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CptName)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NOofSeats)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NOofSeats)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <div class="row">
            <div class="col-md-6">
                <input type="hidden" asp-for="BusId" />
                <a asp-action="Index" class="btn btn-secondary">Back</a>
                <input type="submit" value="Delete" class="btn btn-danger" />

            </div>
        </div>
    </form>
</div>
