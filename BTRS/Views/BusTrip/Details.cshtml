@model BTRS.Models.BusTrip
@Html.Partial("_adminTop")


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Trip Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            Bus No.
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bus.BusId)
        </dd>
        <dt class="col-sm-2">
            Captain Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bus.CptName)
        </dd>
        <dt class="col-sm-2">
            Number of Seats
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bus.NOofSeats)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    <a asp-action="Edit" asp-route-id="@Model?.TripId" class="btn btn-primary">Edit</a>

</div>
