@model BTRS.Models.BusTrip
@Html.Partial("_userTop")

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h3>Are you sure you want to cancel this trip?</h3>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-3">
                    Destination
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Destination)
                </dd>

                <dt class="col-sm-3">
                    Start Date
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>

                <dt class="col-sm-3">
                    End Date
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="RemoveTrip">
        <div class="row">
            <div class="col-md-6">
                <input type="hidden" asp-for="TripId" />
                <button type="button" onclick="window.location.href='@Url.Action("TripList")'" class="btn btn-secondary">Back</button>
                <button type="submit" value="Delete" class="btn btn-danger">Cancel</button>

            </div>
        </div>
    </form>
</div>
